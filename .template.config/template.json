{
    "$schema": "http://json.schemastore.org/template",
    "author": "Webion",
    "classifications": [ "Web", "ASP" ],
    "identity": "Webion.Template",
    "name": "Webion API solution",
    "shortName": "webion-api-sln",
    "sourceName": "Webion.Template",
    "tags": {
      "language": "C#",
      "type": "solution"
    },
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net6.0"
                },
                {
                    "choice": "net7.0"
                },
                {
                    "choice": "net8.0"
                }
            ],
            "defaultValue": "net7.0",
            "replaces": "{TargetFramework}"
        },
        "ProjectName": {
            "type": "parameter",
            "isRequired": "true",
            "description": "Short PascalCase name for the project, used where it's appended to class names",
            "datatype": "text",
            "replaces": "{ProjectName}"
        }
    },
    "preferNameDirectory": true
}